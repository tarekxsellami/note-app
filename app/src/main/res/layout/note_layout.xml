<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/dark_grey_background"
    android:padding="8dp">

    <TextView
        android:id="@+id/note_title"
        style="@style/CustomTextViewBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/note_description"
        style="@style/CustomTextViewMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_image"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/created_at"
        style="@style/CustomTextViewMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/dark_grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/note_description"
        app:layout_constraintTop_toBottomOf="@+id/note_description" />

    <TextView
        android:id="@+id/edited_at"
        style="@style/CustomTextViewMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/created_at"
        app:layout_constraintTop_toBottomOf="@+id/created_at" />

    <ImageView
        android:id="@+id/note_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_note_height"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/note_title"
        app:layout_constraintTop_toBottomOf="@+id/note_title"
        android:contentDescription="@string/image_url" />
</androidx.constraintlayout.widget.ConstraintLayout>